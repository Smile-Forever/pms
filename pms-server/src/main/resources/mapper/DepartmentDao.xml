    <insert id="insert" parameterType="cn.tedu.pms.entity.DepartmentEntity" useGeneratedKeys="true" keyProperty="id">
        insert into
          department
        values
          id,name ,enable,
          is_parent,path,
          parent_id,
          created_by
        values(
          #{name}
        )
    </insert>
</mapper>